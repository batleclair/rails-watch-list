<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p>This is your watch list! Feel free to add more movies to it.</p>
  </div>
</div>

<!-- Title and Cards -->
<div class="container">
  <div class="d-flex justify-content-between">
    <h3>Movies</h3>
    <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#addMovie">
        Add a movie
    </button>
  </div>
  <div class="row p-2">
      <% @list.bookmarks.each do |bookmark| %>
        <div class = "col-4 shadow p-0 bg-white rounded">
          <div class="card-category card-movie-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=bookmark.movie.poster_url%>)">
          </div>
          <div class="p-3">
            <p><strong><%= bookmark.movie.title %></strong> â€¢ <%= bookmark.movie.rating %><i class="fa-solid fa-star text-warning"></i></p>
            <p class="text-small-grey"><%= bookmark.movie.overview %></p>
          </div>
          <div class="card-movie-footer ps-3 pe-3 d-flex justify-content-between">
            <p><i class="fa-solid fa-quote-left me-2"></i><%= bookmark.comment %></p>
            <p class="text-small-grey">delete</p>
          </div>
       </div>
      <% end %>
  </div>
</div>

<!-- Add new movie to list Modal -->
<%= render "new_bookmark", list: @list %>
